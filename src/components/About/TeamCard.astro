---
import type { ITeamCard } from '@interfaces/ITeamCard'

const { src, alt, name, job, description } = Astro.props as ITeamCard
---

<article class="w-full sm:w-5/12 md:w-3/12 flex flex-col justify-center items-center gap-3 py-2 sm:p-2 mb-5">
  <figure class="w-full flex justify-center items-center">
    <img
      class="w-full"
      src={src}
      alt={alt}
      title={alt}
      loading="lazy"
    >
  </figure>
  <h3 class="text-2xl">{name}</h3>
  <h4 class="text-xl italic">{job}</h4>
  <p class="text-center">{description}</p>
  <a
    class="border-1 border-zinc-950 px-3 py-2 black-button"
    href="/contact"
    aria-label="Button for booking an appointment"
    title="Click for booking an appointment"
  >
    Book an appointment
  </a>
</article>