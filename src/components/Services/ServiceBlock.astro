---
interface IServiceBlock {
  image: string;
  title: string;
  slogan: string;
  description: string;
}

const { image, title, slogan, description } = Astro.props as IServiceBlock
---

<section
  class="w-full min-h-screen relative flex flex-col justify-center lg:flex-row lg:justify-between items-center px-10 py-8 gap-5 overflow-hidden"
  style={`
    background-image: url('${image}');
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
  `}
  aria-labelledby={`service-block-subtitle-${title.replace(/\s+/g, '-').toLowerCase()}`}
  id={`${title.replace(/\s+/g, '-').toLocaleLowerCase()}-service-block`}
>
  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black/50 z-0 opacity-80"></div>
  <!-- Content -->
  <div class="w-full lg:w-4/12 relative z-10 flex flex-col gap-5">
    <h2
      class="text-4xl text-white text-shadow caps"
      id={`service-block-subtitle-${title.replace(/\s+/g, '-').toLowerCase()}`}
    >
      {title}
    </h2>
    <p class="text-lg text-white leading-7 text-shadow">{slogan}</p>
  </div>
  <div class="w-full lg:w-5/12 relative z-10 flex flex-col gap-5">
    <p class="text-base text-white leading-7 text-shadow">{description}</p>
    <a
      class="white-button text-white text-base"
      href="/contact"
      aria-label="Button for booking an appointment"
      title="Click for booking an appointment"
    >
      Book Appointment
    </a>
  </div>
</section>