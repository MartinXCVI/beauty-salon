---
interface NailServiceCardProps {
  title: string
  image: string
  description: string
}

const { title, image, description } = Astro.props as NailServiceCardProps
---

<article
  data-nail-card
  class="w-11/12 h-fit sm:w-10/12 md:w-5/12 lg:w-3/12 relative rounded-md overflow-hidden shadow-md transition-shadow duration-300 hover:shadow-xl border border-pink-100 bg-white"
>
  <figure class="w-full flex justify-center items-center">
    <img
      src={image}
      alt={`${title} illustration`}
      loading="lazy"
      class="w-full h-48 object-cover"
      title={`${title} service illustration`}
    />
  </figure>

  <div class="p-4">
    <h3 class="text-xl font-semibold text-pink-700">{title}</h3>
    <button
      class="toggle-btn mt-2 flex items-center gap-2 text-sm text-pink-600 hover:text-pink-500"
      type="button"
      aria-expanded="false"
      aria-controls={`desc-${title.replace(/\s+/g, '-').toLowerCase()}`}
      aria-label="Button for displaying or hidding the service description"
      title="Click for displaying or hidding the service description"
    >
      <span class="label">Learn more</span>
      <i class="fas fa-chevron-down transition-transform duration-300"></i>
    </button>
    <p
      id={`desc-${title.replace(/\s+/g, '-').toLowerCase()}`}
      class="description w-full max-w-full max-h-0 overflow-hidden transition-all duration-500 ease-in-out text-sm text-gray-600 mt-2 whitespace-normal break-words min-w-0"
    >
      {description}
    </p>

    <div class="mt-4">
      <a
        href="/contact"
        class="inline-block bg-pink-600 text-white px-4 py-2 text-sm hover:bg-pink-700 transition"
        title="Click for booking an appointment"
        aria-label="Button for booking an appointment"
      >
        Book Now
      </a>
    </div>
  </div>

  <script src="../../helpers/nailServiceCard.ts"></script>
</article>